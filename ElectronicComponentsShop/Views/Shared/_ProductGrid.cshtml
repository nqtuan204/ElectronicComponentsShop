@{
}
@model IEnumerable<ProductVM>
@if (Model.Count() == 0)
{
    <h4>Không có sản phẩm phù hợp, kiểm tra lại bộ lọc.</h4>
}
else
{
    <!-- store products -->
    <div class="row">
        <!-- render products here-->
        @foreach (var product in Model)
        {
            Html.RenderPartialAsync("_Product", product);
        }
    </div>
}

