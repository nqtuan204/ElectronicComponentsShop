<div class="container">
    <form>
        <div class="row" style="width: 250px; margin: 5px;">
            <label>Mật khẩu:</label>
            <input class="form-control text-info" type="password" autocomplete="off" id="user-password" style="float: right" />
        </div>
        <div class="row" style="width: 250px; margin: 5px;">
            <label>Mật khẩu mới:</label>
            <input class="form-control text-info" type="password" id="user-new-password" autocomplete="off" style="float: right" />
        </div>
    </form>
    <div class="row" style="width: 250px; margin: 15px 5px 5px">
            <input type="button" class="form-control" value="Xong" style="background: #D10024; border:0px; color:white; float:right; width:250px;" onclick="changePassword()">
        </div>
    <p hidden id="change-user-password-success">Đổi mật khẩu thành công</p>
    <p hidden id="invalid-user-password">Mật khẩu không đúng, vui lòng nhập lại</p>
</div>