@{
    ViewBag.Title = "Giỏ hàng";
    ViewBag.BCTree = new Dictionary<string, string> { { "Trang chủ", "/" }, { "Giỏ hàng", "/Cart" } };
}
<div class="container" style="margin-top: 20px;">
    <div class="row">
        <div class="col-xs-8">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">
                        <div class="row">
                            <div class="col-xs-6">
                                <h5><span class="glyphicon glyphicon-shopping-cart"></span> Giỏ hàng</h5>
                            </div>
                            <div class="col-xs-6">
                                <button type="button" class="btn btn-primary btn-sm btn-block" onclick="window.location.href='/Product/List'">
                                    <span class="glyphicon glyphicon-share-alt"></span> Tiếp tục mua hàng
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="panel-body" id="full-cart">Không có sản phẩm nào</div>
                    <div class="panel-footer" id="full-cart-footer"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var temp_items = [];
</script>
<script type="text/html" id="empty-full-cart">
    <div class="panel-body" id="full-cart">Không có sản phẩm nào</div>
    <div class="panel-footer" id="full-cart-footer"></div>
</script>
<script type="text/html" id="update-cart-button">
    <div class="row">
        <div class="text-center">
            <div class="col-xs-9">
                <h6 class="text-right"> </h6>
            </div>
            <div class="col-xs-3">
                <button type="button" class="btn btn-default btn-sm btn-block" onclick="updateCart()">
                    Áp dụng
                </button>
            </div>
        </div>
    </div>
</script>